{% extends 'base.html.twig' %}

{% block title %}Post{% endblock %}

{% block body %}
    <div class="top-bar">
        <div class="top-bar-left">
            <ul class="menu">
                <li class="menu-text"><a href="/">Blog de SuperCookies2000</a></li>
            </ul>
        </div>
        <div class="top-bar-right">
            <ul class="menu">
                <li><a href="#">Connexion</a></li>
                <!--<li><a href="#">Nouvel article</a></li>
                <li><a href="#">Lien deux</a></li>
                <li><a href="#">lien trois</a></li>-->
            </ul>
        </div>
    </div>
    <div class="callout large primary">
        <div class="row column text-center">
            <h1>{{ post.titre }}</h1>
        </div>
    </div>
    <div class="row" id="content">
        <div class="medium-8 columns">
            <div class="blog-post">
                <p>{{ post.content }}</p>
            </div>
        </div>
        <div class="medium-3 columns" data-sticky-container>
            <div class="sticky" data-sticky data-anchor="content">
                <h4>Publié le <small>{{ post.published|date("d/m/Y") }}</small></h4>
            </div>
        </div>
    </div>
    <div class="row column">
        <p>Retour à la <a href='/'>page d'accueil</a>.</p>
    </div>
    <script src="https://code.jquery.com/jquery-2.1.4.min.js"></script>
    <script src="https://dhbhdrzi4tiry.cloudfront.net/cdn/sites/foundation.js"></script>
    <script>
          $(document).foundation();
    </script>
{% endblock %}
