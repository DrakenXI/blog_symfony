{% extends 'base.html.twig' %}

{% block title %}Article : {{ post.titre }} {% endblock %}

{% block nav %}{% include 'partials/nav.html.twig' %}{% endblock %}

{% block body %}

    <style>
        .row .column .text-center * { background-image: url('./assets/cookies.jpg');}
        .row .column .text-center { background-image: url('./assets/cookies.jpg');}
    </style>
    <div class="callout large primary small-banner">
        <div class="row column text-center">
            <h1>{{ post.titre }}</h1>
        </div>
        {% for message in app.flashes('notice') %}
        <div data-closable class="callout alert-callout-border success">
            <strong>Yay!</strong><p>{{ message }}</p>
            <!--<button class="close-button" aria-label="Dismiss alert" type="button" data-close>
                <span aria-hidden="true">&times;</span>
            </button>-->
        </div>
        {% endfor %}
    </div>
    <div class="row" id="content">
    <div class="row column" id="content">
        <div class="medium-8 columns">
            <div class="blog-post">
                <p>{{ post.content }}</p>
            </div>
        </div>
        <div class="medium-3 columns" data-sticky-container>
            <div class="sticky" data-sticky data-anchor="content">
                <h4>Publié le <small>{{ post.published|date("d/m/Y") }}</small></h4>
                <ul>
                    <li><a href='{{path('edit', {url: post.urlalias}) }}'>Modifier l'article</a></li>
                    <li><a href='{{path('delete', {url: post.urlalias}) }}'>Supprimer l'article</a></li>
                </ul>
            </div>
        </div>
    </div>
    <div class="row column">
        <p>Retour à la <a href='/'>page d'accueil</a>.</p>
    </div>
    <script src="https://code.jquery.com/jquery-2.1.4.min.js"></script>
    <script src="https://dhbhdrzi4tiry.cloudfront.net/cdn/sites/foundation.js"></script>
    <script>
          $(document).foundation();
    </script>
{% endblock %}
